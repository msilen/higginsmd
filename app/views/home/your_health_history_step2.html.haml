      = label_tag :therapeutic, 'Therapeutic'
      = check_box_tag 'therapeutic'
    .treatment_modalities
      = label_tag :osteopathic, 'Osteopathic Care'
      = check_box_tag 'osteopathic'
      = label_tag :others, 'Others'
      = check_box_tag 'others'
    .heading_radio
