.register_header{
  background: url('register_top_bg.png');
  height: 143px;
  width: 1205px;
}
#login{
  .green{
    top:0px;
    height: 426px;
    padding-top:0;
  }
  h1,h3,h4{
    color:white;
  }
  .form_body{
    float: left;
    margin-left: -17px;
    margin-top: 36px;
    margin-bottom: 20px;
    width: 777px;
    a{
      margin: 19px 0 0 8px;
      float:left;
      font-family: HNM;
      text-decoration: none;
      font-size:9pt;
      color: #66f9f1;
    }
    label{
      clear:both;
      float:left;
      font-family: HN, Verdana;
      font-size: 11pt;
      color: #014c23;
      text-shadow: 1px 1px #19d77d;
    }
    input{
      clear:both;
      float:left;
      margin-top:8px;
    }
  }
  h1{
    font-size:46px;
  }
  .left_column {
    h3{
      margin-left: -16px;
    }
    .loginbtn {
      left: -17px;
      position: relative;
      top: -29px;
      width: 430px;
      h4{
        width:260px;
      }
      a{
        float:left;
        margin: 15px 0 0 15px;
      }
    }
  }

  .register_form{
    .form_body{
      margin: 46px 0 0 5px;
      label{
        color: #964104;
        text-shadow: 1px 1px #f4c247;
        width:80px;
      }
      input {
        clear:none;
        margin: -10px 0 36px 0;
      }
    }
    h3{
      font-size: 23px;
      margin-left: 40px;
      margin-top: 12px;
    }
    h4{
      float: left;
      line-height: 19px;
      margin: -9px 0 0 6px;
      width: 200px;
    }
    .register_now_btn{
      left: 14px;
      position: relative;
      top: -10px;
    }
    background: url('register_form.png') no-repeat;
    padding-left: 83px;
    padding-top: 78px;
    width: 630px;
    height: 500px;
    position: absolute;
    left: 513px;
    top: -20px;
  }
}
#footer{
  top:15px;
}
