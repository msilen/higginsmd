/*----------style setups----------*/
body{
  font-family:Verdana;
}
h1,h2{
  font-family: MPCB;
  font-weight: normal;
}
h3,h4{
  font-family: MPCI;
}

h1,h2,h3{
  text-align:center;
  color: white;
}
.distribute{
  text-align:justify;
  &:after{
    content: "";
    display: inline-block;
    height: 0;
    overflow: hidden;
    width: 100%;
  }
}
.clearfix:after { 
  content: "."; 
  visibility: hidden; 
  display: block; 
  height: 0; 
  clear: both;
}
ul.hornav{
  list-style-type: none;
  margin:0 auto;
  padding: 0px;
  overflow: hidden;
  display:inline;
  li{
    margin: auto;
    display: inline-block;
  }
}
.shadow {
  -moz-box-shadow:    inset 0 4px 5px lightgray;
  -webkit-box-shadow: inset 0 4px 5px black;
  box-shadow:         inset 0 4px 5px lightgray;
}
/*----------style setups----------*/
